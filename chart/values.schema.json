{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Nginx Values",
  "type": "object",
  "properties": {
    "image": {
      "type": "object",
      "properties": {
        "repository": {
          "type": "string",
          "description": "Nginx image repository."
        },
        "tag": {
          "type": "string",
          "description": "Nginx image tag."
        }
      }
    },
    "service": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "description": "Kubernetes service type.",
          "enum": ["ClusterIP", "NodePort", "LoadBalancer", "ExternalName"]
        }
      }
    }
  }
}
